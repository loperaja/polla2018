<div class="container login-form">
  <div class="row justify-content-md-center">
    <div class="col col-lg-4 login-form-right">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Correo electronico" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Contraseña" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Confirme contraseña" %><br/>
    </div>
    <%= f.submit "Registrarse", class: "btn btn-info btn-block" %>
  <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
