<%= form_for @polla do |f| %>
<%= f.hidden_field :wizard_step, value: f.object.next_step %>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-lg-10">
      <div class="card" style="padding-bottom: 10px;">
        <div class="card-header">
	  <%= "#{@round.first.name.titleize}" %>
	</div>
	<div class="container">
	  <div class="row">
	    <div class="col-lg-12"><br/>
	      <h4> <%= "Seleccione sus #{@round.first.num_teams} clasificados"%> </h4><br/>
	    </div>
	  </div>
	  <div class="row">
	    <%= f.collection_check_boxes :team_ids, Team.all, :id, :name do |b| %>
	      <div class="col-lg-3">
	      <div class="form-check form-check-inline">
	        <%= b.check_box(class: "form-check-input rondas", data:{max_teams: @round.first.num_teams}) %>
	        <%= b.label(class: "form-check-label") %>
	      </div>
	      </div>
	    <%end%>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
<%= render :partial => 'navigation', locals: {:f => f, :size => 10}%>
<%end%>
