@import "bootstrap";
.logo-home {
  background-image: url(<%= asset_path('polloskiGorba.jpg') %>);
  background-size: contain;
  background-color: #000000;
  background-repeat: no-repeat;
  background-position: center center;
  height: 280px;
}
.logo-reg {
  background-image: url(<%= asset_path('polloskiLada.jpg') %>);
  background-size: contain;
  background-color: #c0b99d;
  background-repeat: no-repeat;
  background-position: center center;
  height: 280px;
}

.login-form {
  margin-top: 10px;
}

.login-form-right {
  padding-top: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  border: solid #f0efef;
}

body {
  background-color: #f5f7f8;
}

.card-header {
  background-color: #9d1215;
  color: #b8af67;
  font-weight: bold;
}

.shadow {
  box-shadow: 0 1px 6px 0 rgba(117,117,117,.25);
}

.list-group-item.active, .input-group-text {
  background-color: #9d1215;
  color: #b8af67;
  border-color: #b8af67;
  font-weight: bold;
}

.btn-circle {
  width: 90px;
  height: 90px;
  text-align: center;
  font-weight: bold;
  padding: 6px 0;
  font-size: 35px;
  line-height: 1.42;
  border-radius: 45px;
}

.wizard-active {
  border: 3px solid #b8af67;
  background-color: #9d1215;
  box-shadow: 2px 2px 2px #888888;
  color: #b8af67;
}

#elflash {
  background-color: #9d1215;
  color: #b8af67;
  font-weight: bold;
}
