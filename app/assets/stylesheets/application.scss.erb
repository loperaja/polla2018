.f1 {
	padding: 25px; background: #fff;
	-moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px;
}

.f1-steps { overflow: hidden; position: relative; margin-top: 20px; }

.f1-progress { position: absolute; top: 20px; left: 0; width: 100%; height: 1px; background: #ddd; }
.f1-progress-line { position: absolute; top: 0; left: 0; height: 1px; background: #9d1215; }

.f1-step { position: relative; float: left; width: 16.6666667%; padding: 0 5px; }

.f1-step-icon {
	display: inline-block; width: 30px; height: 30px; margin-top: 4px; background: #ddd;
	font-size: 16px; color: #fff; line-height: 30px;
	-moz-border-radius: 50%; -webkit-border-radius: 50%; border-radius: 50%; text-align:center;
}
.f1-step.activated .f1-step-icon {
	background: #fff; border: 3px solid #f35b3f; color: #f35b3f; line-height: 38px;
}
.f1-step.active .f1-step-icon {
	width: 38px; height: 38px; margin-top: 0; background: #9d1215; font-size: 22px; line-height: 38px; color: #b8af67;
}

.f1-step p { color: #ccc; }
.f1-step.activated p { color: #9d1215; }
.f1-step.active p { color: #9d1215; }

